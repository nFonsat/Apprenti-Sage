<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lpiem.apprentisage"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Sherlock.Light" >
        <activity
            android:name="com.lpiem.apprentisage.ihm.CategorieActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.lpiem.apprentisage.ihm.SousCategorieActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.lpiem.apprentisage.ihm.SplashScreenActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.Sherlock.Light.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.lpiem.apprentisage.ihm.AccueilActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.Sherlock.Light.NoActionBar" >
        </activity>
        <activity
            android:name="com.lpiem.apprentisage.ihm.CreerProfilActivity"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.lpiem.apprentisage.ihm.ProfilActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.lpiem.apprentisage.ihm.RangerActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.lpiem.apprentisage.ihm.CompterActivity"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.lpiem.apprentisage.ihm.LectureActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.lpiem.apprentisage.ihm.CalculActivity"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.lpiem.apprentisage.ihm.ConjugaisonActivity"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.lpiem.apprentisage.ihm.DicteeActivity"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="adjustPan" >
        </activity>
    </application>

</manifest>